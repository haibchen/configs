{
    // "docker.host": "tcp://localhost:23750"     // see setup instructions for vs code in a remote container
    
    "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "$home/.config/nvim/init.lua",
    "vscode-neovim.logOutputToConsole": true,
    "whichkey.bindings": [
        {
            "key": "d",
            "name": "show uncommitted changes",
            "type": "command",
            "command": "fb-hg.diff"
        },
        {
            "key": "l",
            "name": "show/hide tnterative smartlog",
            "type": "command",
            "command": "fb-hg.toggle-interactive-smartlog"
        },
        {
            "key": "f",
            "name": "focus on file explorer",
            "type": "command",
            "command": "workbench.files.action.focusfilesexplorer",
            "when": "!fileexplorerfocus"
        },
        {
            "key": "t",
            "name": "toggle terminal",
            "type": "command",
            "command": "workbench.action.togglepanel"
        },
        {
            "key": "e",
            "name": "toggle explore sidebar",
            "type": "command",
            "command": "workbench.action.togglesidebarvisibility"
        },
        {
            "key": "g",
            "name": "open a biggrep pane",
            "type": "command",
            "command": "nuclide-biggrep:open-pane"
        },
        {
            "key": "c",
            "name": "open in codehub",
            "type": "command",
            "command": "fb-phabricator-diffusion:openincodehub",
        },
        {
            "key": "o",
            "name": "open omni-search",
            "type": "command",
            "command": "omni-search-ui:quick-search",
        }
    ],
    "terminal.integrated.profiles.linux": {
        "tmux-shell": {
          "path": "tmux",
          "args": ["new-session", "-A", "-s", "vscode:${workspaceFolder}", "/bin/zsh"]
        }
    },
    "terminal.integrated.profiles.osx": {
        "tmux-shell": {
          "path": "tmux",
          "args": ["new-session", "-A", "-s", "vscode:${workspaceFolder}", "/bin/zsh"]
        }
    },
    "terminal.integrated.defaultProfile.linux": "tmux-shell",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.defaultProfile.osx": "tmux-shell",
    "terminal.integrated.systemd.shouldUse": true,

    "window.zoomLevel": 2,
    "search.showLineNumbers": true,

    "editor.fontSize": 13,
    "editor.semanticHighlighting.enabled": true,
    "editor.formatOnPaste": true,
    "editor.minimap.showSlider": "always",
    "editor.suggest.insertMode": "replace",
    "editor.suggest.showStatusBar": true,
    "editor.accessibilitySupport": "off",
    "editor.lineNumbers": "relative",
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.inlineSuggest.allowSuggestOnTriggerCharacters": true,
    "editor.tabSize": 2,
   
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.showTabs": false,
    "workbench.activityBar.visible": false,
    "workbench.iconTheme": "material-icon-theme",

    //"terminal.integrated.sendkeybindingstoshell": true

}
